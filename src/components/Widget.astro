---
export interface Props {
  title?: string
  label?: string
}

const { title, label } = Astro.props
---

<div class="rounded-lg bg-gray-900/80 border border-gray-800 p-3 sm:p-4 relative backdrop-blur-md overflow-auto">
  <div class="flex items-center flex-wrap gap-x-5 gap-y-1 sticky top-0 left-0">
    <h3 class="flex-auto font-display text-xl font-bold text-gray-200">
      {title}
    </h3>
    <p class="text-gray-400 text-md font-bold">
      {label}
    </p>
  </div>
  <div class="mt-3 md:mt-4">
    <slot />
  </div>
</div>
