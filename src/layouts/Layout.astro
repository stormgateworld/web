---
import "@fontsource-variable/nunito-sans"

import Footer from "../components/Footer.astro"

export interface Props {
  title: string
}

const { title } = Astro.props
const currentRoute = new URL(Astro.request.url).pathname

const navLinks = [
  { href: "/social", text: "Social Feed" },
  { href: "/leaderboards/ranked_1v1", text: "Leaderboard" },
  { href: "/creators", text: "Creators" },
]
---

<!DOCTYPE html>
<html lang="en" class="scroll-pt-24">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@tabler/icons-webfont@2.22.0/tabler-icons.min.css" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>
      {title ? `${title} - Stormgate World` : "Stormgate World"}
    </title>
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-V5SFFY7NM1"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || []
      function gtag() {
        dataLayer.push(arguments)
      }
      gtag("js", new Date())
      gtag("config", "G-V5SFFY7NM1")
    </script>
  </head>
  <body class="bg-body text-body font-body scroll-pt-24 bg-gray-950 text-white antialiased">
    <div class="sticky top-0 z-10 w-full bg-gray-800/80 border-b border-gray-700/50 backdrop-blur-md">
      <nav
        class="mx-auto flex flex-wrap md:h-16 max-w-screen-2xl items-center gap-y-2 py-2 gap-1 px-4 font-display md:gap-4"
      >
        <a href="/" class="whitespace-nowrap text-xl font-extrabold text-gray-200 basis-full md:basis-auto">
          Stormgate World</a
        >

        {
          navLinks.map(({ href, text }) => (
            <a
              href={href}
              class:list={[
                "font-bold rounded px-3 py-1.5",
                currentRoute === href ? "bg-white/5 text-gray-50" : "hover:bg-white/5 text-gray-200 ",
              ]}
            >
              {text}
            </a>
          ))
        }

        <div class="flex-auto"></div>
        <a
          href="https://playstormgate.com"
          target="_blank"
          class="hidden whitespace-nowrap rounded-md border-white/20 bg-gray-100/20 px-6 py-2 text-sm font-bold text-gray-100 font-bold transition hover:bg-gray-100 sm:block"
          data-class="bg-white rounded-full text-sm mr-4 px-6 py-2 border text-black my-6 inline-block font-bold border-white hover:bg-gray-100 transition"
        >
          Sign up for beta
        </a>
      </nav>
    </div>
    <slot />
    <Footer />
  </body>
</html>
